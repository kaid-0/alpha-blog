<h1> All Articles </h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |art| %>
      <tr>
        <td><%= art.title %></td>
        <td><%= art.description %></td>
        <td><%= link_to 'Show', article_path(art) %></td>
        <td><%= link_to 'Edit', edit_article_path(art) %></td>
        <td><%= link_to 'Delete', article_path(art), data: { "turbo-method": :delete,turbo_confirm: "Are you sure?" } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br/>
<%= link_to 'Create New Article', new_article_path %>

